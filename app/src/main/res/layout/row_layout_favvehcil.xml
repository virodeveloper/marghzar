<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tool="http://schemas.android.com/tools"
	xmlns:tools="http://schemas.android.com/tools">
	<data>
		<variable
			name="user"
			type="pick.com.app.varient.owner.pojo.BookingModel.Data"/>
	
	</data>
	

	<androidx.cardview.widget.CardView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		
		app:cardElevation="5dp">
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:orientation="vertical"
			
			android:background="@drawable/rect_view_light_gray">
			
			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left">
				
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="110dp"
					android:scaleType="centerCrop"
					app:loadImage='@{user.upload_url +"vehicle_images/"+ user.vehicle_image }'
					android:layout_alignParentEnd="true"
					android:src="@drawable/dummu"/>
				
				<ImageView
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_alignParentRight="true"
					android:layout_marginTop="5dp"
					
					android:layout_marginEnd="5dp"
					android:layout_marginBottom="5dp"
					app:setFav="@{user}"
					tools:src="@drawable/fav_icon" />
			</RelativeLayout>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tool:text="Mahindra XUV 500 GTR"
				android:text="@{user.vehicle_name}"
				android:textColor="@color/black"
				android:textSize="10sp"
				android:layout_marginStart="5dp"/>
			
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:orientation="horizontal">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tool:text="5 Seater"
					android:text='@{user.seater + " Seater"}'
					android:textSize="9sp" />
				
				<View
					android:layout_width="1dp"
					android:layout_height="match_parent"
					android:layout_marginStart="2dp"
					android:layout_marginEnd="2dp"
					android:background="@color/view_color" />
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tool:text="Manual"
					android:text="@{user.vehicle_transmission_title}"
					android:textSize="9sp" />
			
			</LinearLayout>
			
			<View
				android:layout_width="wrap_content"
				android:layout_height="1dp"
				android:layout_marginTop="10dp"
				android:background="@color/view_color" />
			
			
			
			<Button
				android:id="@+id/book_now"
				android:layout_width="match_parent"
				android:text="Book Now"
				android:textColor="@color/ef_white"
				android:textSize="8sp"
				
				android:layout_margin="5dp"
				android:background="@color/skyblue"
				android:layout_height="30dp" />
		</LinearLayout>
	</androidx.cardview.widget.CardView>
	
</layout>

