<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:bind="http://schemas.android.com/apk/res-auto">
	
	<data>
	
		<variable
			name="model"
			type="pick.com.app.varient.user.pojo.RegistrationModel.Data"/>
		
		<variable
			name="toolbar"
			type="pick.com.app.base.model.ToolbarCustom"/>
		
		
		</data>
	
	<LinearLayout
		
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_height="match_parent">
		
		<include layout="@layout/toolbar"
			bind:toolbar="@{toolbar}"/>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_height="wrap_content">
			
			<TextView
				android:layout_width="wrap_content"
				android:text="@string/account_number"
				android:textSize="@dimen/_13sdp"
				android:paddingStart="15dp"
				android:textColor="@color/skyblue"
				android:layout_height="wrap_content" />
			
			<EditText
				android:layout_width="match_parent"
				android:hint="@string/account_number"
				android:text="@{model.account_number}"
				android:textSize="@dimen/_13sdp"
				android:paddingStart="15dp"
				android:paddingBottom="25dp"
				android:layout_height="wrap_content" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_height="wrap_content">
			
			<TextView
				android:layout_width="wrap_content"
				android:text="@string/bank_number"
				android:textSize="@dimen/_13sdp"
				android:paddingStart="15dp"
				android:textColor="@color/skyblue"
				android:layout_height="wrap_content" />
			
			<EditText
				android:layout_width="match_parent"
				android:hint="@string/bank_number"
				android:text="@{model.bank_name}"
				android:textSize="@dimen/_13sdp"
				android:paddingStart="15dp"
				android:paddingBottom="25dp"
				android:layout_height="wrap_content" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_height="wrap_content">
			
			<TextView
				android:layout_width="wrap_content"
				android:text="@string/iban_number"
				android:textSize="@dimen/_13sdp"
				android:paddingStart="15dp"
				android:textColor="@color/skyblue"
				android:layout_height="wrap_content" />
			
			<EditText
				android:layout_width="match_parent"
				android:hint="@string/iban_number"
				android:text="@{model.iban_number}"
				android:textSize="@dimen/_13sdp"
				android:paddingStart="15dp"
				android:paddingBottom="25dp"
				android:layout_height="wrap_content" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_height="wrap_content">
			
			<TextView
				android:layout_width="wrap_content"
				android:text="@string/account_holder_name"
				android:textSize="@dimen/_13sdp"
				android:paddingStart="15dp"
				android:textColor="@color/skyblue"
				android:layout_height="wrap_content" />
			
			<EditText
				android:layout_width="match_parent"
				android:hint="@string/account_holder_name"
				android:textSize="@dimen/_13sdp"
				android:text="@{model.beneficiary_name}"
				android:paddingStart="15dp"
				android:paddingBottom="25dp"
				android:layout_height="wrap_content" />
		</LinearLayout>
		
		
		<LinearLayout
			android:layout_width="match_parent"
			android:gravity="center"
			android:padding="@dimen/_15sdp"
			android:layout_height="wrap_content">
			
			<pick.com.app.uitility.custom.RoundButton
				android:id="@+id/submitbutton"
				android:layout_width="@dimen/_200sdp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:onClick="submitDetails"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:text="@string/add_bank_account"
				app:rb_animation_alpha="true"
				app:rb_animation_duration="500"
				android:textStyle="bold"
				app:rb_background_color="#1DA1F2"
				app:rb_background_color_pressed="#0B5D8E"
				app:rb_corner_radius="10dp"
				app:rb_corner_width="1dp"
				app:rb_text_color="@android:color/white"
				app:rb_text_color_pressed="@android:color/white" />
			/>
		</LinearLayout>
	</LinearLayout>
</layout>