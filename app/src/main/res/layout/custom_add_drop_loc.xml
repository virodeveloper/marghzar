<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<data>
		
		
		<variable
			name="user"
			type="pick.com.app.varient.user.pojo.RegistrationModel.Data.Locations"/>
	</data>

<LinearLayout

	android:gravity="center_vertical"
	android:orientation="vertical"
	android:layout_marginLeft="25dp"
	android:layout_marginBottom="15dp"
	android:layout_marginRight="25dp"
	
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">


		<pick.com.app.uitility.custom.CustomEditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight=".5"

			android:hint="@string/enter_drop_address"

			android:inputType="textPostalAddress"

			android:padding="10dp"


			android:text="@={user.drop_location_address}"
			android:textColor="#669BDB"


			android:textColorHint="#2196F3"
			android:textSize="12sp"


			app:libIZO_setBorderColor="#FFFFFF"
			app:libIZO_setBorderView="true"
			app:libIZO_setCornerRadius="5dp" />

		<pick.com.app.uitility.custom.CustomEditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_weight=".3"
			android:hint="@string/enter_pincode"
			android:inputType="number"

			android:padding="10dp"

			android:text="@={user.drop_pin_code}"
			android:textColor="#2196F3"

			android:textColorHint="#B6C6C1C1"


			android:textSize="12sp"
			app:libIZO_setBorderColor="#FFFFFF"


			app:libIZO_setBorderView="true"
			app:libIZO_setCornerRadius="5dp"
			app:setValue="@{user}" />
		
		<ImageView
			android:layout_width="25dp"
			android:layout_height="25dp"
			app:removeLocation="@{user}"
			android:layout_marginStart="10dp"
			android:src="@drawable/min_icon" />
		
		<ImageView
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:layout_marginStart="10dp"
			
			app:addLocation="@{user}"
			
			android:src="@drawable/header_plus_icon" />
		
		
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_marginTop="5dp"
		app:manageLayoutbackground="@{user}"
		android:background="@drawable/rect_view"
		android:layout_height="wrap_content">
		

	<TextView
		android:id="@+id/hint_spinner"
		android:layout_width="0dp"
		android:drawableRight="@android:drawable/arrow_down_float"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_weight=".3"
		android:backgroundTint="@color/ef_white"
		android:layout_margin="2dp"
		android:textSize="12sp"
		android:padding="10dp"
		android:text="@{user.city}"
		app:setSpinerData="@{user}"
		android:layout_height="wrap_content" />
	
	</LinearLayout>
</LinearLayout>

</layout>