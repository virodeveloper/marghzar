<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:bind="http://schemas.android.com/tools">
	
	<data>
		
		<import type="android.view.View"/>
		<variable
			name="toolbar"
			type="pick.com.app.base.model.ToolbarCustom"/>
		
		<variable
			name="activity"
			type="pick.com.app.varient.user.ui.activity.FillBookingActivity"/>
		
		<variable
			name="model"
			type="pick.com.app.varient.user.pojo.BookingModelUser.Data"/>
		
	
	</data>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<include layout="@layout/toolbar"
			bind:toolbar="@{toolbar}"/>
		
		
		<androidx.core.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:gravity="center_horizontal"
					android:orientation="vertical">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="10dp"
						android:text="@string/profile_pciture"
						android:textColor="@color/change_screen_text_color" />
					
					
				
					
					<RelativeLayout
						android:layout_width="95dp"
						android:layout_height="90dp"
						android:layout_margin="5dp">
						
						<de.hdodenhof.circleimageview.CircleImageView
							android:id="@+id/profile_image"
							android:layout_width="80dp"
							android:layout_height="80dp"
							
							android:src="@drawable/upload_btn"
							app:civ_border_color="#000"
							app:civ_border_width="1dp" />
						
						<ImageView
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:layout_alignParentRight="true"
							android:layout_alignParentBottom="true"
							android:onClick='@{()->activity.showPicker("Profile")}'
							
							android:src="@drawable/change_pic_icon" />
					</RelativeLayout>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="10dp">
					
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAllCaps="true"
						android:text="@string/name_as_on_driving_license"
						android:textColor="@color/change_screen_text_color" />
					
					<pick.com.app.uitility.custom.CustomEditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="13sp"
                        android:enabled="false"
						
						android:layout_marginTop="5dp"
						android:inputType="textCapSentences"
						android:padding="8dp"
						android:text="@={model.dl_name}"
						android:textColor="#353535"
						android:textColorHint="#71353535"
						android:background="@drawable/rect_view_editprofile" />
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAllCaps="true"
						android:layout_marginTop="5dp"
						android:text="@string/mobile"
						android:textColor="@color/change_screen_text_color" />

					<pick.com.app.uitility.custom.CustomEditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp"
						android:background="@drawable/rect_view_editprofile"
						android:enabled="false"

						android:inputType="number"
						android:padding="8dp"
						android:text="@={model.contact_number}"
						android:textColor="#353535"
						android:textColorHint="#71353535"
						android:textSize="13sp" />
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAllCaps="true"
						android:layout_marginTop="5dp"
						android:text="@string/upload_license"
						android:textColor="@color/change_screen_text_color" />
					
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						
						android:layout_marginTop="10dp"
						android:background="@drawable/rect_view_editprofile"
						android:orientation="horizontal"
						android:gravity="center_vertical">
						
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight=".1"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:textSize="13sp"
							android:maxLines="1"
							android:ellipsize="end"
							android:text="@{model.upload_license}"
							android:hint="@string/upload_license"
							android:textColorHint="#B6C6C1C1"
							android:textColor="#B6C6C1C1"/>
						
						<pick.com.app.uitility.custom.RoundButton
							android:layout_width="@dimen/_100sdp"
							android:layout_height="@dimen/_35sdp"
							android:gravity="center"
							android:onClick='@{()->activity.showPicker("lisence")}'
							android:text="@string/upload"
							android:textSize="15sp"
							app:rb_background_color="#1DA1F2"
							app:rb_background_color_pressed="#0B5D8E"
							app:rb_corner_color="@color/ef_white"
							app:rb_corner_radius="2dp"
							android:layout_margin="@dimen/_2sdp"
							app:rb_text_color="@android:color/white"
							app:rb_text_color_pressed="@android:color/white" />
					
					</LinearLayout>
					
					<LinearLayout
						android:visibility="@{model.isLisancePreview() ? View.VISIBLE : View.GONE}"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						
						<RelativeLayout
							android:layout_marginTop="10dp"
							
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
							<ImageView
								android:id="@+id/lisence_image"
								android:layout_width="80dp"
								android:scaleType="fitXY"
								android:src="@color/ef_white"
								android:layout_marginTop="10dp"
								android:layout_height="80dp" />
							
							<ImageView
								android:onClick="removePreview"
								android:layout_width="wrap_content"
								android:layout_marginStart="65dp"
								android:id="@+id/imageViewPreviewClose"
								android:src="@drawable/com_facebook_close"
								android:layout_height="wrap_content" />
						
						</RelativeLayout>
					</LinearLayout>
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAllCaps="true"
						android:layout_marginTop="5dp"
						android:text="@string/email_address"
						android:textColor="@color/change_screen_text_color" />
					
					<pick.com.app.uitility.custom.CustomEditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="13sp"
						android:inputType="textEmailAddress"
						android:padding="8dp"
                        android:enabled="false"
						android:text="@={model.email}"
						
						android:layout_marginTop="5dp"
						android:textColor="#353535"
						android:textColorHint="#71353535"
						android:background="@drawable/rect_view_editprofile" />
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textAllCaps="true"
						android:layout_marginTop="5dp"
						android:text="@string/driving_license_number_fill"
						android:textColor="@color/change_screen_text_color" />
					
					<pick.com.app.uitility.custom.CustomEditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="13sp"
						android:padding="8dp"
						android:text="@={model.dl_number}"
                        android:enabled="false"
						
						android:layout_marginTop="5dp"
						android:textColor="#353535"
						android:textColorHint="#71353535"
						android:background="@drawable/rect_view_editprofile" />
					
					<LinearLayout

app:manageLayoutVisibility = "@{model}"
						android:layout_width="match_parent"
						
						android:layout_height="wrap_content"
						android:orientation="vertical">
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textAllCaps="true"
							android:layout_marginTop="5dp"
							android:text="@string/enter_address_for_delivery"
							android:textColor="@color/change_screen_text_color" />
						
						<pick.com.app.uitility.custom.CustomEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textSize="13sp"
							android:padding ="8dp"

							android:text="@={model.delivery_address}"
							
							android:layout_marginTop="5dp"
							android:textColor="#353535"
							android:textColorHint="#71353535"
							android:background="@drawable/rect_view_editprofile" />
					</LinearLayout>
					
					
					
					<pick.com.app.uitility.custom.RoundButton
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:gravity="center"
						android:paddingStart="8dp"
						android:paddingEnd="8dp"
						android:onClick="fillbooking"
						android:textStyle="bold"
						android:text="@string/proceed_to_payment"
						app:rb_animation_alpha="true"
						app:rb_animation_duration="500"
						app:rb_background_color="#1DA1F2"
						app:rb_background_color_pressed="#0B5D8E"
						app:rb_corner_radius="3dp"
						app:rb_corner_width="1dp"
						app:rb_text_color="@android:color/white"
						app:rb_text_color_pressed="@android:color/white" />
					/>
					
				</LinearLayout>
				
				
			</LinearLayout>
		</androidx.core.widget.NestedScrollView>
	</LinearLayout>

</layout>
