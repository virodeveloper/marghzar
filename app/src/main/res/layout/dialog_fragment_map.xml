<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:minWidth="250dp"
	android:maxWidth="250dp"
	android:maxHeight="400dp"
	android:background="@color/ef_white"
	android:minHeight="400dp"
	android:layout_height="match_parent"
	>
	
	
	
	<fragment
		android:name="com.google.android.gms.maps.SupportMapFragment"
		xmlns:map="http://schemas.android.com/apk/res-auto"
		android:id="@+id/map"
		
		android:layout_width="match_parent"
		android:layout_height="match_parent"  />
	
	<ImageView
		android:id="@+id/closeButton"
		android:layout_width="25dp"
		
		android:src="@drawable/cross_icon"
		android:layout_alignParentRight="true"
		android:layout_margin="10dp"
		android:layout_height="25dp" />
	<androidx.cardview.widget.CardView
		android:layout_marginTop="50dp"
		android:layout_marginLeft="20dp"
		app:cardElevation="10dp"
		android:layout_marginRight="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	<LinearLayout
		android:elevation="10dp"
		
		android:id="@+id/serchlayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		
		android:layout_gravity="center_vertical"
		android:background="@drawable/wite_rect"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:padding="10dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.49"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.043">
		
		
		
		<TextView
			android:id="@+id/textView2"
			android:layout_width="0dp"
			android:layout_height="30dp"
			android:layout_weight=".1"
			android:autoSizeTextType="uniform"
			android:autoSizeMinTextSize="12sp"
			android:gravity="center_vertical"
			android:autoSizeMaxTextSize="15sp"
			android:autoSizeStepGranularity="2sp"
			android:singleLine="true"
			android:ellipsize="marquee"
			
			android:hint="@string/set_location_manually"
			android:textColor="#5D5959" />
		
		
		<ImageView
			android:id="@+id/search_button"
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:src="@drawable/srh_icon" />
		
		
		<ImageView
			android:id="@+id/buttonGPS"
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:layout_marginLeft="10dp"
			android:src="@drawable/poup_location_icon" />
	
	</LinearLayout>
	</androidx.cardview.widget.CardView>
	
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_marginBottom="10dp"
		android:orientation="vertical"
		android:layout_alignParentBottom="true"
		android:layout_height="wrap_content">
		<pick.com.app.uitility.custom.CustomEditText
			android:id="@+id/edit_text_landmark"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			
			android:layout_marginRight="15dp"
			android:hint="@string/address_landmark"
			
			android:inputType="text"
			
			android:padding="10dp"
			
			android:textColor="#000"
			android:textColorHint="#B6535252"
			
			app:libIZO_setBackgroundColor="@color/ef_white"
			app:libIZO_setBorderColor="#B4B4B4"
			app:libIZO_setBorderView="true"
			app:libIZO_setStrokeWidth="2dp"
			android:textSize="15sp"
			app:libIZO_setCornerRadius="3dp" />
		
		<pick.com.app.uitility.custom.RoundButton
			android:id="@+id/buttonSubmit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="15dp"
			android:gravity="center"
			android:paddingStart="8dp"
			android:paddingEnd="8dp"
			android:text="@string/done"
			app:rb_animation_alpha="true"
			app:rb_animation_duration="500"
			
			
			app:rb_background_color="#1DA1F2"
			app:rb_background_color_pressed="#0B5D8E"
			app:rb_corner_radius="3dp"
			app:rb_corner_width="1dp"
			
			app:rb_text_color="@android:color/white"
			app:rb_text_color_pressed="@android:color/white" />
		/>
	</LinearLayout>
	
	
	<ImageView
		android:layout_width="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/placeholder_icon"
		android:layout_height="wrap_content" />


</RelativeLayout>