<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tool="http://schemas.android.com/tools">
	
	<data>
		
		
		<variable
			name="user"
			type="pick.com.app.varient.owner.pojo.VehicleModel.Data.BulkAvailability"/>
	</data>
	
	<LinearLayout
		
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:layout_marginLeft="25dp"
		android:layout_marginBottom="15dp"
		android:layout_marginRight="15dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		
		
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight=".5"
			android:background="@drawable/rect_view_editprofile"
			tool:hint="1 Week"
			android:hint="@{user.getHint(user.position)}"
			android:onClick='@{()->user.callBulkAvalibility(user)}'
			android:inputType="textPostalAddress"
			android:text="@{user.avail_name}"
			android:textSize="12sp"
			android:padding="10dp"
			
			
			android:textColor="#353535"
			android:textColorHint="#71353535"
			
			
			 />
		
		<pick.com.app.uitility.custom.CustomEditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_weight=".3"
			android:text="@={user.avail_price}"
			android:hint="@string/price"
			
			
			android:inputType="number"
			android:textSize="12sp"
			
			android:padding="10dp"
			
			
			android:textColor="#353535"
			android:textColorHint="#71353535"
			
			
			app:libIZO_setBorderColor="#353535"
			app:libIZO_setBorderView="true"
			app:libIZO_setCornerRadius="5dp" />
		
		<ImageView
			android:layout_width="25dp"
			android:layout_height="25dp"
			app:removeVehicle="@{user}"
			android:layout_marginLeft="10dp"
			android:tint="@color/profile_top_back_color"
			android:src="@drawable/min_icon" />
		
		<ImageView
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			app:addVehicle="@{user}"
			android:tint="@color/profile_top_back_color"
			android:src="@drawable/header_plus_icon" />
	
	
	
	
	</LinearLayout>

</layout>