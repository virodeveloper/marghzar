<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:bind="http://schemas.android.com/apk/res-auto">
	
	<data>
		<import type="android.view.View"/>
		<variable
			name="activity"
			type="pick.com.app.varient.owner.activity.EditProfileActivity"/>
		
		<variable
			name="toolbar"
			type="pick.com.app.base.model.ToolbarCustom"/>
		
		
		<variable
			name="user"
			type="pick.com.app.varient.user.pojo.RegistrationModel" />
	</data>
	
	<LinearLayout
	
	android:layout_width="match_parent"
		android:orientation="vertical"
	android:layout_height="match_parent">
	
	<include layout="@layout/toolbar"
		bind:toolbar="@{toolbar}"/>
	
		
	<androidx.core.widget.NestedScrollView
		
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:orientation="vertical"
				
				android:gravity="center"
				android:layout_margin="10dp"
				android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				
				
				android:text="@string/profile_picture" />
			
			<RelativeLayout
				android:layout_width="95dp"
				android:layout_margin="5dp"
				android:layout_height="wrap_content"
				>
				
				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/profile_image"
					android:layout_width="80dp"
					android:layout_height="80dp"
					app:loadImage='@{user.data.upload_url +"profile_pic/"+ user.data.profile_pic }'
					android:src="@drawable/com_facebook_profile_picture_blank_square"
					app:civ_border_color="#000"
					app:civ_border_width="1dp" />
				
				<ImageView
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_alignParentRight="true"
					android:layout_alignParentBottom="true"
					android:onClick="showPicker"
					android:src="@drawable/change_pic_icon" />
			</RelativeLayout>
			</LinearLayout>
			
			<pick.com.app.uitility.custom.CustomEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="5dp"
				android:layout_marginRight="20dp"
				android:hint="@string/name"
				
				android:inputType="textCapSentences"
				android:padding="8dp"
				android:text="@{user.data.dl_name}"
				
				android:textColor="#353535"
				android:textColorHint="#71353535"
				
				android:textSize="13sp"
				app:libIZO_setBorderColor="#353535"
				
				
				app:libIZO_setBorderView="true"
				app:libIZO_setCornerRadius="3dp"
				app:setValue="@{user}" />
			
			
			<pick.com.app.uitility.custom.CustomEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="15dp"
				android:layout_marginRight="20dp"
				android:hint="@string/enter_email_address"
				android:inputType="textEmailAddress"
				android:padding="8dp"
				android:text="@{user.data.email}"
				
				
				android:textColor="#353535"
				android:textColorHint="#71353535"
				
				android:textSize="13sp"
				app:libIZO_setBorderColor="#353535"
				
				
				app:libIZO_setBorderView="true"
				app:libIZO_setCornerRadius="3dp"
				app:setValue="@{user}" />
			
			
			
			
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:gravity="center_vertical"
				android:background="@drawable/rect_view_editprofile"
				android:layout_marginTop="15dp"
				android:layout_marginRight="20dp">
				
				<TextView
					android:layout_width="wrap_content"
					
					android:text='@{"+"+user.data.country_code+" -"}'
					
					android:paddingEnd="10dp"
					android:paddingStart="10dp"
					
					
					android:textSize="13sp"
					android:textColor="#353535"
					android:textColorHint="#71353535"
					
					android:layout_height="wrap_content" />
				
				<pick.com.app.uitility.custom.CustomEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="13sp"
					android:enabled="false"
					android:hint="@string/enter_mobile_number"
					android:text="@{user.data.contact_number}"
					android:inputType="number"
					app:setValue="@{user}"
					android:padding="8dp"
					
					
					
					
					
					android:textColor="#353535"
					android:textColorHint="#71353535"
					
					
					android:background="@null"
					
					/>
			
			</LinearLayout>
			
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="25dp"
				android:layout_marginTop="15dp"
				android:orientation="vertical">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/owner_type"
					android:textColor="#353535"
					android:textSize="13sp" />
				
				<RadioGroup
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					
					<RadioButton
						android:layout_width="0dp"
						android:layout_weight=".3"						android:layout_height="wrap_content"
						android:button="@drawable/custom_btn_radio_registration"
						
						android:padding="7dp"
						android:text="@string/individual"
						android:textColor="#353535"
						android:checked="@{user.data.user_type.equals(@string/oi)}"
						
						android:textSize="13sp"
						android:onClick="@{user}"
						/>
					
					<RadioButton
						android:layout_width="0dp"
						android:layout_weight=".5"						android:layout_height="wrap_content"
						android:button="@drawable/custom_btn_radio_registration"
						android:padding="7dp"
						android:text="@string/company"
						android:textColor="#353535"
						android:textSize="13sp"
						android:checked="@{user.data.user_type.equals(@string/oc)}"
						
						android:onClick="@{user}"
						/>
				
				</RadioGroup>
			
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="25dp"
				android:layout_marginTop="15dp"
				android:orientation="vertical">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/ready_to_deliver_vehicle_at_user_door"
					android:textColor="#353535"
					/>
				
				<RadioGroup
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					
					android:orientation="horizontal">
					
					<RadioButton
						android:id="@+id/radioYEs"
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:layout_height="wrap_content"
						android:button="@drawable/custom_btn_radio_registration"
						android:padding="7dp"
						android:text="@string/yes"
						android:checked="@{user.data.deliver_user_door==1? true : false}"
						
						
						android:textColor="#353535"
						android:textSize="13sp"
						 />
					
					<RadioButton
						android:id="@+id/radioNo"
						
						android:layout_width="0dp"
						android:layout_weight=".5"						android:layout_height="wrap_content"
						android:button="@drawable/custom_btn_radio_registration"
						android:padding="7dp"
						android:text="@string/No"
						android:textColor="#353535"
						
						android:checked="@{user.data.deliver_user_door==0? true : false}"
						
						android:textSize="13sp"
						
						
						 />
				
				</RadioGroup>
			
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/layoutPerkilometer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="25dp"
				android:layout_marginTop="10dp"
				
				android:layout_marginRight="25dp"
				android:gravity="center_vertical">
				
				<TextView
					android:layout_width="wrap_content"
					
					android:layout_height="wrap_content"
					android:text="@string/charge_for_one_kilometer"
					android:textColor="#353535"
					android:textSize="13sp" />
				
				
				<LinearLayout
					android:layout_width="100dp"
					android:layout_height="35dp"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="10dp"
					
					android:background="@drawable/rect_view_editprofile"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					
					<EditText
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight=".1"
						android:background="@null"
						android:gravity="center"
						android:hint="@string/amount"
						android:inputType="number"
						android:maxLength="4"
						android:text="@{user.data.charges_kilometer}"
						
						android:textColor="#353535"
						android:textColorHint="#71353535"
						android:textSize="13sp"
						app:setValue="@{user}"
						
						
						/>
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:text="@string/Sar"
						android:textColor="#353535"
						
						
						android:textSize="13sp" />
				
				</LinearLayout>
				
				
				<TextView
					android:layout_width="wrap_content"
					
					android:layout_height="wrap_content"
					android:text="@string/km"
					android:textColor="#353535"
					android:textSize="13sp" />
			
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:layout_marginLeft="25dp"
				android:layout_marginTop="15dp"
				android:layout_marginRight="25dp"
				
				android:background="@drawable/rect_view_editprofile"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight=".1"
					android:hint="@string/pick_address"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					android:text="@{user.data.pick_location_address}"
					android:textColor="#353535"
					android:textColorHint="#71353535"
					android:singleLine="true"
					android:ellipsize="marquee"
					
					android:textSize="13sp" />
				
				<pick.com.app.uitility.custom.RoundButton
					android:layout_width="120dp"
					android:layout_height="match_parent"
					android:layout_margin="4dp"
					
					android:gravity="center"
					
					android:onClick="@{()->activity.checkLocationPermission()}"
					android:text="@string/add_address"
					
					
					android:textSize="10sp"
					
					
					app:rb_background_color="#1DA1F2"
					app:rb_background_color_pressed="#0B5D8E"
					
					app:rb_corner_radius="5dp"
					app:rb_corner_width="1dp"
					app:rb_text_color="@android:color/white"
					app:rb_text_color_pressed="@android:color/white" />
				/>
			
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:orientation="vertical">
				
				<CheckBox
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="25dp"
					android:layout_marginTop="15dp"
					android:layout_marginRight="25dp"
					android:layout_marginBottom="5dp"
					android:checked="@={user.data.isdifferentcity}"
					android:onClick="manageDropAddress"
					android:text="@string/drop_address"
					android:textColor="#353535" />
				
				<androidx.recyclerview.widget.RecyclerView
					android:id="@+id/recycleviwe"
					android:visibility="@{user.data.isdifferentcity ? View.VISIBLE : View.GONE}"
					
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>
			
			
				
				
				
			</LinearLayout>
			
			<pick.com.app.uitility.custom.RoundButton
				android:id="@+id/buttonSubmit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="15dp"
				android:layout_marginBottom="15dp"
				android:gravity="center"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:text="@string/submit"
				app:rb_animation_alpha="true"
				app:rb_animation_duration="500"
				
				android:onClick="submitOnclick"
				app:rb_background_color="#1DA1F2"
				app:rb_background_color_pressed="#0B5D8E"
				app:rb_corner_radius="3dp"
				app:rb_corner_width="1dp"
				
				app:rb_text_color="@android:color/white"
				app:rb_text_color_pressed="@android:color/white" />
			/>
		
		</LinearLayout>
	
	</androidx.core.widget.NestedScrollView>
	
	</LinearLayout>

</layout>