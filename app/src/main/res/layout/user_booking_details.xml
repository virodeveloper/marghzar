<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
	xmlns:app="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tool="http://schemas.android.com/tools">
	
	<data>
		
		<import type="android.view.View" />
		
		<variable
			name="user"
			type="pick.com.app.varient.owner.pojo.BookingModel.Data"/>
		
		<variable
			name="toolbar"
			type="pick.com.app.base.model.ToolbarCustom"/>
	
	</data>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<include
			layout="@layout/toolbar"
			bind:toolbar="@{toolbar}" />
		
		<androidx.core.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/ef_white"
				android:orientation="vertical">
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/ef_grey" />
				
				<LinearLayout
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:layout_height="wrap_content">
					
					<RelativeLayout
						android:layout_width="110dp"
						
						android:layout_height="110dp">
						
						<ImageView
							android:scaleType="centerCrop"
							android:layout_centerInParent="true"
							android:layout_width="wrap_content"
							app:loadImage='@{user.upload_url +"vehicle_images/"+ user.vehicle_image}'
							android:src="@drawable/placeholder"
							android:layout_height="wrap_content" />
						
						<TextView
							android:layout_width="match_parent"
							android:background="#B6000000"
							android:layout_alignParentBottom="true"
							android:text="+919001638910"
							android:textSize="10sp"
							android:padding="3dp"
							android:visibility="gone"
							android:gravity="center"
							android:textColor="@color/ef_white"
							android:layout_height="wrap_content" />
					
					</RelativeLayout>
					
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_weight=".2"
						android:layout_gravity="center"
						android:layout_height="match_parent">
						
						<LinearLayout
							android:layout_width="match_parent"
							android:orientation="vertical"
							android:layout_height="match_parent">
							
							
							<LinearLayout
								android:layout_width="match_parent"
								android:paddingStart="5dp"
								android:gravity="center_vertical"
								android:orientation="vertical"
								android:layout_height="0dp"
								android:layout_weight=".4">
								
								<TextView
									android:layout_width="match_parent"
									
									tool:text="Jayden Ethan"
									android:text="@{user.vehicle_model}"
									android:textSize="13sp"
									android:textColor="@color/profile_top_back_color"
									android:layout_height="wrap_content" />
								
								<TextView
									android:layout_width="wrap_content"
									tool:text="#BGNHY2503"
									android:text='@{"#"+user.booking_id}'
									android:textSize="13sp"
									android:paddingEnd="7sp"
									android:textColor="@color/skyblue"
									android:layout_height="wrap_content" />
								
								<LinearLayout
									android:layout_width="match_parent"
									android:layout_height="wrap_content">
									
									<TextView
										android:layout_width="wrap_content"
										
										android:visibility="@{user.vehicle_for==1?View.VISIBLE:View.INVISIBLE}"
										android:text='@{@string/free_km_with_value(user.one_day_free_kilometer)}'
										
										android:textSize="11sp"
										android:textColor="@color/profile_top_back_color"
										android:layout_height="wrap_content" />
									
									<TextView
										android:layout_width="wrap_content"
										
										android:layout_marginStart="7dp"
										android:visibility="@{user.vehicle_for==1?View.VISIBLE:View.GONE}"
										android:text='@{@string/excess_value(user.per_kilometer_charge)}'
										android:textSize="11sp"
										android:layout_height="wrap_content" />
								
								</LinearLayout>
								
								<LinearLayout
									android:layout_width="match_parent"
									android:orientation="horizontal"
									android:gravity="center_vertical"
									android:layout_marginTop="@dimen/_5sdp"
									android:layout_height="wrap_content">
									
									
									<androidx.appcompat.widget.AppCompatButton
										android:layout_width="wrap_content"
										android:background="#1DA1F2"
										android:layout_marginEnd="5dp"
										android:textSize="8sp"
										android:elevation="5dp"
										android:text="@{user.getStatusByIdUser(user.booking_status)}"
										android:textColor="@color/ef_white"
										android:padding="7dp"
										
										android:layout_height="30dp" />
								
								
								
								</LinearLayout>
							
							
							</LinearLayout>
						
						</LinearLayout>
					</LinearLayout>
				
				
				</LinearLayout>
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/gray_btn_bg_color" />
				
				<LinearLayout
					
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_weight=".5"
						android:orientation="vertical"
						android:paddingStart="5dp"
						
						android:layout_height="wrap_content">
						
						<TextView
							android:layout_width="wrap_content"
							tool:text="Pickup Address"
							android:text="@{user.isDifferentCity(user.is_different_city_drop) ? @string/pick_up_address : @string/pick_up_drop_address}"
							
							android:textSize="12sp"
							android:textColor="@color/black"
							android:layout_height="wrap_content" />
						
						<TextView
							android:layout_width="wrap_content"
							android:textSize="12sp"
							tool:text="A-68,69 Sunder Singh Bhandari Nagar, Swej Farm, Sodala, Jaipur, Rajasthan 302019"
							android:text='@{user.pick_address}'
							android:textColor="#888888"
							android:padding="@dimen/_5sdp"
							android:layout_height="wrap_content" />
					
					
					</LinearLayout>
					
					<View
						android:layout_width="1dp"
						android:visibility="@{user.isDifferentCity(user.is_different_city_drop) ?View.VISIBLE:View.GONE}"
						
						android:background="@color/gray_btn_bg_color"
						android:layout_height="match_parent" />
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_weight=".5"
						android:gravity="left"
						android:visibility="@{user.isDifferentCity(user.is_different_city_drop) ?View.VISIBLE:View.GONE}"
						
						android:paddingStart="10dp"
						android:orientation="vertical"
						android:layout_height="wrap_content">
						
						<TextView
							android:layout_width="wrap_content"
							android:text="@string/drop_address"
							android:textSize="12sp"
							android:textColor="@color/black"
							android:layout_height="wrap_content" />
						
						<TextView
							android:layout_width="wrap_content"
							android:textSize="12sp"
							tool:text="A-68,69 Sunder Singh Bhandari Nagar, Swej Farm, Sodala, Jaipur, Rajasthan 302019"
							android:text='@{user.drop_address}'
							android:textColor="#888888"
							android:padding="@dimen/_5sdp"
							android:layout_height="wrap_content" />
					
					
					</LinearLayout>
				</LinearLayout>
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/gray_btn_bg_color" />
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight=".1"
						android:gravity="center_vertical"
						android:orientation="vertical"
						
						android:paddingStart="10dp">
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingTop="5dp"
							android:text="@string/pickup_time"
							android:textSize="10sp" />
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							
							android:gravity="center_vertical">
							
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								tool:text="22"
								android:text='@{user.getFormatedDAte(user.from_date_time,"DAY")}'
								android:textColor="@color/profile_top_back_color"
								android:textSize="25sp"
								android:textStyle="bold" />
							
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:gravity="center_vertical"
								android:orientation="vertical"
								android:paddingStart="4dp">
								
								
								<TextView
									
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									tool:text="MAY"
									android:text='@{user.getFormatedDAte(user.from_date_time,"Month")}'
									android:textColor="@color/profile_top_back_color"
									android:textSize="10sp" />
								
								<TextView
									
									android:layout_width="wrap_content"
									
									android:layout_height="wrap_content"
									
									
									android:text='@{user.getFormatedDAte(user.from_date_time,"Time")}'
									
									tool:text="4:45 PM"
									android:textSize="10sp" />
							</LinearLayout>
						
						</LinearLayout>
					
					</LinearLayout>
					
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/date_arrow" />
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight=".1"
						android:gravity="center_vertical"
						android:orientation="vertical"
						android:paddingStart="5dp">
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingTop="5dp"
							android:text="@string/drop_off_time"
							android:textSize="10sp" />
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							
							android:gravity="center_vertical">
							
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								tool:text="22"
								android:text='@{user.getFormatedDAte(user.to_date_time,"DAY")}'
								android:textColor="@color/profile_top_back_color"
								android:textSize="25sp"
								android:textStyle="bold" />
							
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:gravity="center_vertical"
								android:orientation="vertical"
								android:paddingStart="4dp">
								
								
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="match_parent"
									tool:text="MAY"
									android:text='@{user.getFormatedDAte(user.to_date_time,"Month")}'
									android:textColor="@color/profile_top_back_color"
									android:textSize="10sp" />
								
								<TextView
									
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text='@{user.getFormatedDAte(user.to_date_time,"Time")}'
									tool:text="4:45 PM"
									android:textSize="10sp" />
							</LinearLayout>
						
						</LinearLayout>
					
					</LinearLayout>
					<LinearLayout
						android:layout_width="0dp"
						android:layout_weight=".15"
						app:manageExtended="@{user}"
						
						android:layout_height="wrap_content">
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:src="@drawable/date_arrow" />
						
						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight=".1"
							android:gravity="center_vertical"
							android:orientation="vertical"
							android:paddingStart="5dp">
							
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:paddingTop="5dp"
								android:text="@string/extended_date"
								android:textAllCaps="true"
								android:textSize="10sp" />
							
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								
								android:gravity="center_vertical">
								
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									tool:text="22"
									android:text='@{user.getFormatedDAte(user.extended_date_time,"DAY")}'
									
									android:textColor="@color/profile_top_back_color"
									android:textSize="25sp"
									android:textStyle="bold" />
								
								<LinearLayout
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:gravity="center_vertical"
									android:orientation="vertical"
									android:paddingStart="4dp">
									
									
									<TextView
										
										android:layout_width="wrap_content"
										android:layout_height="match_parent"
										tool:text="MAY"
										android:text='@{user.getFormatedDAte(user.extended_date_time,"Month")}'
										
										android:textColor="@color/profile_top_back_color"
										android:textSize="10sp" />
									
									<TextView
										android:layout_width="wrap_content"
										
										android:layout_height="wrap_content"
										
										android:text='@{user.getFormatedDAte(user.extended_date_time,"Time")}'
										
										tool:text="4:45 PM"
										android:textSize="10sp" />
								</LinearLayout>
							
							</LinearLayout>
						
						</LinearLayout>
					</LinearLayout>
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/date_arrow"
						android:visibility="gone"/>
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight=".1"
						android:visibility="gone"
						android:gravity="center_vertical"
						android:orientation="vertical"
						android:paddingStart="5dp">
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingTop="5dp"
							android:text="@string/drop_off_time"
							android:textSize="10sp" />
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical">
							
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="32"
								android:textColor="@color/profile_top_back_color"
								android:textSize="25sp"
								android:textStyle="bold" />
							
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:gravity="center_vertical"
								android:orientation="vertical"
								android:paddingStart="4dp">
								
								
								<TextView
									android:id="@+id/textView"
									android:layout_width="wrap_content"
									android:layout_height="match_parent"
									android:text="MAY"
									android:textColor="@color/profile_top_back_color"
									android:textSize="10sp" />
								
								<TextView
									android:id="@+id/textView3"
									android:layout_width="wrap_content"
									
									android:layout_height="wrap_content"
									
									
									android:text="4:45 PM"
									android:textSize="10sp" />
							</LinearLayout>
						
						</LinearLayout>
					
					</LinearLayout>
				</LinearLayout>
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/gray_btn_bg_color" />
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:manageLayoutUser="@{user}"
					app:layoutname='@{"checkup_before_view_user"}'>
					
					<include layout="@layout/check_up_before_view_user"
						bind:user="@{user}"/>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:manageLayoutUser="@{user}"
					app:layoutname='@{"checkup_after_view_user"}'>
					
					<include layout="@layout/check_up_after_view" bind:user="@{user}"/>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					
					<include layout="@layout/amount_layout_booking_details"
						bind:user="@{user}"/>
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:gravity="bottom"
					android:layout_margin="10dp"
					android:layout_height="match_parent">
					
					
					
					
					
					
					<LinearLayout
						app:manageLayoutUser="@{user}"
						app:layoutname='@{"cancel_submit_btn"}'
						android:layout_width="match_parent"
						android:layout_height="40dp">
						<androidx.appcompat.widget.AppCompatButton
							android:id="@+id/first_button"
							android:layout_width="0dp"
							android:layout_weight=".1"
							android:background="#1DA1F2"
							android:layout_marginEnd="5dp"
							android:textSize="14sp"
							android:elevation="5dp"
							android:visibility="@{user.show_submit_button ? View.VISIBLE : View.GONE}"
							android:text="@{user.getButtonTextUser(user.booking_status)}"
							android:textColor="@color/ef_white"
							android:padding="7dp"
							android:layout_height="match_parent" />
						<androidx.appcompat.widget.AppCompatButton
							android:id="@+id/cancel_booking"
							android:layout_width="0dp"
							android:layout_weight=".1"
							android:textColor="@color/ef_white"
							android:layout_marginStart="5dp"
							android:textSize="14sp"
							android:elevation="5dp"
							android:layout_marginEnd="5dp"
							android:visibility="@{user.show_cancel_booking ? View.VISIBLE : View.GONE}"
							android:text="@{user.getCancelButtonText(user.booking_status)}"
							android:background="#1DA1F2"
							android:padding="7dp"
							android:layout_height="match_parent" />
						
						<androidx.appcompat.widget.AppCompatButton
							android:layout_width="0dp"
							android:layout_weight=".1"
							android:background="#1DA1F2"
							android:layout_marginStart="5dp"
							android:textSize="14sp"
							android:elevation="5dp"
							android:text="@string/share"
							android:onClick="shareDetails"
							android:visibility="@{user.show_share_button ? View.VISIBLE : View.GONE}"
							android:textColor="@color/ef_white"
							android:padding="7dp"
							android:layout_height="match_parent" />
					</LinearLayout>
				
				</LinearLayout>
			
			
			</LinearLayout>
		
		</androidx.core.widget.NestedScrollView>
	</LinearLayout>

</layout>
