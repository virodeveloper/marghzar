<?xml version="1.0" encoding="utf-8"?>
<layout>
	
	<data>
		
		<variable
			name="user"
			type="pick.com.app.varient.user.pojo.FilterModel.Data.Filterdata"/>
	</data>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_margin="@dimen/_5sdp"
		android:background="@drawable/rect_view_editprofile"
		android:padding="10dp">
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAllCaps="true"
			android:textSize="12sp"
			android:textColor="@color/change_screen_text_color"
			android:text="@={user.type_title}"/>
		
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recycleview"
			android:layout_width="match_parent"
			app:setRecyclerView="@{user}"
			app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
			tools:listitem="@layout/row_layout_subfilter"
			android:layout_height="match_parent"/>
	
	</LinearLayout>
	
</layout>

