<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<data>
		<import type="android.view.View"/>
		<variable
			name="user"
			type="pick.com.app.varient.user.pojo.VehicleSearchData.Data.Vehicles"/>
	
	</data>
	<LinearLayout
		android:layout_width="match_parent"
		android:paddingBottom="@dimen/_10sdp"
		
		android:layout_height="wrap_content">
	<LinearLayout
android:layout_margin="7dp"
		android:orientation="vertical"
		android:background="@drawable/rect_view_light_gray"
		
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		
		
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_height="wrap_content">
			
			<RelativeLayout
				android:layout_width="@dimen/_100sdp"
				
				android:layout_height="@dimen/_100sdp">


				<pick.com.app.uitility.custom.CircleProgressBar
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:id="@+id/cp"
					android:layout_centerInParent="true"

					android:visibility="visible"/>



				
				<ImageView
					android:scaleType="fitXY"
					android:layout_centerInParent="true"
					app:loadImageData='@{user.upload_url +"vehicle_images/"+ user.vehicle_image }'
					
					
					android:layout_width="match_parent"
					android:src="@drawable/placeholder"
					android:layout_height="match_parent" />
				
				
				<ImageView
					android:layout_width="25dp"
					android:layout_margin="5dp"
					android:layout_alignParentRight="true"
					app:setFav="@{user}"
					
					android:layout_height="25dp" />
			
			</RelativeLayout>
			
			
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight=".2"
				android:layout_height="match_parent">
				
				<LinearLayout
					android:layout_width="match_parent"
					
					android:orientation="vertical"
					
					
					android:layout_height="match_parent">
					
					
					<LinearLayout
						android:layout_width="match_parent"
						android:padding="5dp"
						android:orientation="vertical"
						android:gravity="center_vertical"
						android:layout_height="0dp"
						android:layout_weight=".4">
						
						<TextView
							android:layout_width="match_parent"
							
							tools:text="Jayden Ethan"
							android:text="@{user.model_name}"
							android:textSize="13sp"
							android:textColor="@color/profile_top_back_color"
							android:layout_height="wrap_content" />
						
						
						<LinearLayout
							android:layout_width="wrap_content"
							android:gravity="center_vertical"
							android:layout_height="wrap_content">
							
							<TextView
								android:layout_width="wrap_content"
								android:textStyle="bold"
								tools:text="1000"
								android:paddingEnd="5dp"
								android:textSize="13sp"
								android:text="@{user.vehicle_charges_one_day}"
								android:textColor="@color/skyblue"
								android:layout_height="wrap_content" />
						
							
							<TextView
								android:layout_width="wrap_content"
								android:textSize="12sp"
								android:text="@string/sar_day_text"
								android:textColor="@color/skyblue"
								android:layout_height="wrap_content" />
						
						</LinearLayout>
						
						
						<TextView
							android:visibility="@{user.vehicle_for==1?View.VISIBLE:View.GONE}"
							android:layout_width="wrap_content"
							tools:text="Free Km 250 km ,Excess 50 SAR/Km"
							android:text='@{@string/freekmexcess(user.one_day_free_kilometer,user.per_kilometer_charge)}'
							
							android:textSize="11sp"
							android:textColor="@color/profile_top_back_color"
							android:layout_height="wrap_content" />
						
						<LinearLayout
							android:layout_width="match_parent"
							android:orientation="horizontal"
							android:gravity="center_vertical"
							android:layout_marginTop="5dp"
							android:layout_height="wrap_content">


							<TextView
								android:layout_width="@dimen/_100sdp"
								android:layout_height="match_parent"
								android:layout_gravity="left"
								android:textColor="@color/colorPrimary"
								android:text="AutoCancellation time: 15m"/>
							<LinearLayout
								android:layout_width="0dp"
								android:layout_weight=".4"
								
								android:paddingBottom="5dp"
								android:orientation="vertical"
								android:gravity="end"
								android:layout_height="wrap_content">

								
								
								<androidx.appcompat.widget.AppCompatTextView
									android:layout_width="@dimen/_75sdp"
									android:background="#1DA1F2"
									android:gravity="center"
									android:textSize="10sp"
									android:elevation="5dp"
									
									android:text="@string/book_now"
									android:textAllCaps="true"
									android:textColor="@color/ef_white"
									
									
									android:layout_height="@dimen/_25sdp" />
							
							
							</LinearLayout>
						
						
						</LinearLayout>
					
					</LinearLayout>
				
				</LinearLayout>
			</LinearLayout>
		
		
		</LinearLayout>
		
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/ef_grey" />
		
		
		<LinearLayout
			android:layout_width="match_parent"
			android:padding="5dp"
			android:paddingStart="10dp"
			android:layout_height="wrap_content">
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="5 Seater"
					android:text='@{user.seater+" "+ @string/seater}'
					android:textSize="@dimen/_9sdp"
					android:layout_height="wrap_content" />
				
				<View
					android:layout_width="1dp"
					android:layout_margin="3dp"
					android:background="#A19FA1"
					android:layout_height="match_parent" />
			
			
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="2016 Model"
					android:text='@{user.vehicle_year+" "+@string/model}'
					
					android:textSize="@dimen/_9sdp"
					android:layout_height="wrap_content" />
				
				<View
					android:layout_width="1dp"
					android:layout_margin="3dp"
					android:background="#A19FA1"
					
					android:layout_height="match_parent" />
			
			
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="Small,Hatchback"
					android:text='@{user.vehicle_type_name+","+user.vehicle_subtype_name}'
					
					android:textSize="@dimen/_9sdp"
					android:layout_height="wrap_content" />
				
				<View
					android:layout_width="1dp"
					android:layout_margin="3dp"
					android:background="#A19FA1"
					android:layout_height="match_parent" />
			
			
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="Manual"
					android:text='@{user.vehicle_transmission_title}'
					android:inputType="textCapSentences"
					
					android:textSize="@dimen/_9sdp"
					android:layout_height="wrap_content" />
				
				<View
					android:layout_width="1dp"
					android:layout_margin="3dp"
					android:background="#A19FA1"
					android:layout_height="match_parent" />
			
			
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="Petrol"
					android:text='@{user.fuel_type}'
					android:inputType="textCapSentences"
					android:textSize="@dimen/_9sdp"
					android:layout_height="wrap_content" />
			
			
			</LinearLayout>
		
		</LinearLayout>
		
		<View
			android:layout_width="match_parent"
			android:background="@color/ef_grey"
			android:layout_height="1dp" />
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">
			
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingStart="@dimen/_5sdp"
				android:layout_margin="@dimen/_2sdp"
				android:orientation="vertical">
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="Pickup Address"
					android:text="@{user.isDifferentCity(user.is_different_city) ? @string/pick_up_address :@string/pick_up_drop_address}"
					
					android:textSize="12sp"
					android:textColor="@color/profile_top_back_color"
					android:layout_height="wrap_content" />
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="A-68,69 Sunder Singh Bhandari Nagar, Swej Farm, Sodala, Jaipur, Rajasthan 302019"
					android:text="@{user.pick_adddress}"
					android:textSize="12sp"
					android:maxLines="3"
					android:paddingBottom="@dimen/_5sdp"
					android:ellipsize="end"
					android:layout_height="match_parent" />
				
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:visibility="@{user.isDifferentCity(user.is_different_city) ?View.VISIBLE:View.GONE}"
				
				android:layout_height="match_parent">
				<View
					android:layout_width="1dp"
					android:background="@color/ef_grey"
					android:layout_height="wrap_content" />
				
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:visibility="@{user.isDifferentCity(user.is_different_city) ?View.VISIBLE:View.GONE}"
				
				android:paddingStart="@dimen/_5sdp"
				android:layout_margin="@dimen/_2sdp"
				android:orientation="vertical">
				
				<TextView
					android:layout_width="wrap_content"
					android:text="@string/drop_address"
					android:textSize="12sp"
					android:textColor="@color/profile_top_back_color"
					android:layout_height="wrap_content" />
				
				<TextView
					android:layout_width="wrap_content"
					android:text="@{user.drop_location_address}"
					android:textSize="12sp"
					android:maxLines="3"
					android:paddingEnd="5dp"
					android:ellipsize="end"
					android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
		
	</LinearLayout>
	
	</LinearLayout>
</layout>