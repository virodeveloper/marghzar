<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:bind="http://schemas.android.com/tools">
	
	<data>
		<variable
			name="toolbar"
			type="pick.com.app.base.model.ToolbarCustom"/>
		<import type="android.view.View"/>
		<variable
			name="user"
			type="pick.com.app.varient.user.pojo.RegistrationModel.Data"/>
	</data>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<include
			layout="@layout/toolbar"
			bind:toolbar="@{toolbar}" />
	
	<LinearLayout
		android:orientation="vertical"
		android:background="@color/ef_white"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<LinearLayout
			android:padding="15dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<TextView
				android:layout_width="wrap_content"
				android:text="@string/total_pending_amount"
				android:layout_height="wrap_content" />
			
			<TextView
				android:layout_width="wrap_content"
				android:text="52000 SAR"
				android:textColor="@color/skyblue"
				android:textSize="13sp"
				android:layout_height="wrap_content" />
		
		</LinearLayout>
		
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/ef_grey" />
		
		<LinearLayout
			android:visibility='@{user.iban_number.empty ?View.GONE:View.VISIBLE}'
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:gravity="right"
			android:paddingEnd="15dp"
			android:paddingTop="10dp"
			android:layout_height="wrap_content">
			
			<ImageView
				android:layout_width="25dp"
				android:onClick="editBandDetails"
				android:src="@drawable/edit"
				android:layout_height="25dp" />
			
			<ImageView
				android:layout_width="25dp"
				android:layout_marginStart="10dp"
				android:src="@drawable/delete"
				android:onClick="deleteBandDetails"
				android:layout_height="25dp" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_margin="15sp"
			android:gravity="right"
			android:layout_height="wrap_content">
			
			
			<LinearLayout
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:background="@drawable/grey_corner"
				android:layout_height="wrap_content">
				
				<TextView
					android:layout_width="wrap_content"
					android:text="@string/bank_account_number"
					android:paddingStart="10dp"
					android:textColor="@color/skyblue"
					android:layout_height="wrap_content" />
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="041700100153786"
					android:text="@{user.account_number}"
					android:paddingStart="10dp"
					android:textColor="@color/profile_top_back_color"
					android:layout_height="wrap_content" />
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#DCD9D9" />
				
				
				<TextView
					android:layout_width="wrap_content"
					android:text="@string/bank_number"
					android:paddingStart="10dp"
					android:textColor="@color/skyblue"
					android:layout_height="wrap_content" />
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="Axis Bank"
					android:text="@{user.bank_name}"
					
					android:paddingStart="10dp"
					android:textColor="@color/profile_top_back_color"
					android:layout_height="wrap_content" />
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#DCD9D9" />
				
				
				<TextView
					android:layout_width="wrap_content"
					android:text="@string/bank_iban_number"
					android:paddingStart="10dp"
					android:textColor="@color/skyblue"
					android:layout_height="wrap_content" />
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="UTIB00145"
					android:text="@{user.iban_number}"
					
					android:paddingStart="10dp"
					android:textColor="@color/profile_top_back_color"
					android:layout_height="wrap_content" />
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#DCD9D9" />
				
				
				<TextView
					android:layout_width="wrap_content"
					android:text="@string/account_holder_name"
					android:paddingStart="10dp"
					android:textColor="@color/skyblue"
					android:layout_height="wrap_content" />
				
				<TextView
					android:layout_width="wrap_content"
					tools:text="Alex Petter"
					android:text="@{user.beneficiary_name}"
					
					android:paddingStart="10dp"
					android:textColor="@color/profile_top_back_color"
					android:layout_height="wrap_content" />
			
			
			</LinearLayout>
		
		</LinearLayout>
		</LinearLayout>
		
		<LinearLayout
			android:visibility='@{user.iban_number.empty?View.VISIBLE:View.GONE}'
			android:gravity="center"
			android:padding="@dimen/_35sdp"
			android:onClick="editBandDetails"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<pick.com.app.uitility.custom.RoundButton
				android:layout_width="@dimen/_200sdp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:onClick="editBandDetails"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:text="@string/add_bank_account"
				app:rb_animation_alpha="true"
				app:rb_animation_duration="500"
				android:textStyle="bold"
				app:rb_background_color="#1DA1F2"
				app:rb_background_color_pressed="#0B5D8E"
				app:rb_corner_radius="10dp"
				app:rb_corner_width="1dp"
				app:rb_text_color="@android:color/white"
				app:rb_text_color_pressed="@android:color/white" />
			/>
			
		</LinearLayout>
		
		<com.ogaclejapan.smarttablayout.SmartTabLayout
			android:id="@+id/tabs"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			app:tabMode="scrollable"
			app:tabContentStart="72dp"
			app:stl_indicatorWithoutPadding="false"
			app:stl_indicatorInFront="true"
			app:stl_indicatorInterpolation="smart"
			app:stl_indicatorGravity="bottom"
			app:stl_indicatorColor="#40C4FF"
			app:stl_customTabTextLayoutId="@layout/custom_tab"
			app:stl_customTabTextViewId="@id/custom_text"
			app:stl_indicatorThickness="2dp"
			app:stl_indicatorWidth="auto"
			app:stl_indicatorCornerRadius="2dp"
			
			
			app:stl_defaultTabTextAllCaps="true"
			
			app:stl_defaultTabTextSize="12sp"
			app:stl_defaultTabTextHorizontalPadding="16dp"
			
			app:stl_distributeEvenly="true"
			app:stl_clickable="true"
			app:stl_titleOffset="24dp"
			
			app:stl_drawDecorationAfterTab="true" />
		
		<androidx.viewpager.widget.ViewPager
			android:id="@+id/viewPager"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"></androidx.viewpager.widget.ViewPager>
	
	
	</LinearLayout>
	
	</LinearLayout>
</layout>