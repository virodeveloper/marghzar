<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="center"
	android:layout_width="match_parent"
	android:background="@color/trans_black_color"
	android:layout_height="match_parent">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_marginStart="@dimen/_10sdp"
		android:layout_marginEnd="@dimen/_10sdp"
		android:background="@drawable/top_corner"
		android:layout_height="wrap_content">
		<LinearLayout
			android:padding="10dp"
			
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<TextView
				android:layout_width="0dp"
				android:layout_weight=".1"
				android:textSize="@dimen/_16sdp"
				android:layout_height="wrap_content"
				android:text="@string/report"
				android:textColor="@color/colorPrimary" />
		
			
			<ImageView
				android:id="@+id/cancel_report"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/cross_icon"/>
		
		
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:background="#fff"
			android:gravity="center"
			android:layout_margin="@dimen/_5sdp"
			android:layout_height="wrap_content">
			<pick.com.app.uitility.custom.CustomEditText
				android:id="@+id/report_message"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_120sdp"
				android:layout_marginTop="5dp"
				android:hint="@string/report"
				android:gravity="start"
				android:inputType="textMultiLine"
				android:maxLines="4"
				android:padding="8dp"
				android:background="@drawable/rect_view_editprofile"
				android:textSize="13sp"
				android:textColor="@color/black"
				android:textColorHint="#ddC6C1C1" />
		
		</LinearLayout>
	
	</LinearLayout>
	
	
	<Button
		android:id="@+id/submit_report"
		android:layout_width="match_parent"
		android:background="@drawable/bottom_corner"
		android:textColor="@color/ef_white"
		android:text="@string/submit"
		android:padding="@dimen/_10sdp"
		android:layout_marginStart="@dimen/_10sdp"
		android:layout_marginEnd="@dimen/_10sdp"
		android:layout_height="wrap_content" />


</LinearLayout>
