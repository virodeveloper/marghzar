<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tool="http://schemas.android.com/tools"
	xmlns:bind="http://schemas.android.com/tools">
	
	<data>
		
		<import type="android.view.View"/>
		<variable
			name="toolbar"
			type="pick.com.app.base.model.ToolbarCustom"/>
		
		<variable
			name="url"
			type="pick.com.app.webservices.Urls"/>
		<variable
			name="activity"
			type="pick.com.app.varient.owner.activity.AddNewVehicleActivity"/>
		
		<variable
			name="model"
			type="pick.com.app.varient.owner.pojo.VehicleModel.Data"/>
		</data>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<include
			layout="@layout/toolbar"
			bind:toolbar="@{toolbar}" />
		
		<androidx.core.widget.NestedScrollView
			
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					
					android:layout_margin="10dp"
					android:gravity="center"
					android:orientation="vertical">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						
						
						android:text="@string/vehicle_image" />
					
					<RelativeLayout
						android:layout_width="95dp"
						android:layout_height="wrap_content"
						android:layout_margin="5dp">
						
						<de.hdodenhof.circleimageview.CircleImageView
							android:id="@+id/profile_image"
							android:layout_width="80dp"
							android:layout_height="80dp"
							
							android:src="@drawable/upload_btn"
							app:civ_border_color="#000"
							app:civ_border_width="1dp" />
						
						<ImageView
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:layout_alignParentRight="true"
							android:layout_alignParentBottom="true"
							android:onClick="showPicker"
							android:src="@drawable/change_pic_icon" />
					</RelativeLayout>
				</LinearLayout>
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginTop="15dp"
					android:textSize="12sp"
					android:text="@string/vehicle_brand_model"
					android:textAllCaps="true" />
				
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					
					android:layout_marginRight="20dp"
					
					android:inputType="textCapSentences"
					android:padding="8dp"
					android:onClick='@{(v)->activity.gotoListACtivity("get_models")}'
					
					android:background="@drawable/rect_view_editprofile"
					 >
					
					<TextView
						android:layout_width="match_parent"
						android:textSize="12sp"
						android:text="@{model.model_name}"
						android:hint="@string/vehicle_brand_model"
						android:layout_height="wrap_content" />
				</LinearLayout>
				
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_marginTop="15dp"
					android:layout_height="match_parent">
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight=".1"
						android:orientation="vertical"
						android:paddingStart="20dp">
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="12sp"
							
							android:text="@string/seater"
							android:textAllCaps="true" />
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="35dp"
							android:gravity="center"
							android:onClick='@{(v)->activity.gotoListACtivity("get_seaters")}'
							
							android:background="@drawable/rect_view_editprofile">
							
							<TextView
								android:layout_width="0dp"
								android:layout_weight=".1"
								
								android:text="@={model.seater}"
								android:textAllCaps="true"
								android:textSize="12sp"
								android:hint="@string/select_seat"
								android:paddingStart="10dp"
								android:layout_height="wrap_content" />
							
							<ImageView
								android:layout_width="25dp"
								android:paddingEnd="10dp"
								android:tint="@color/profile_top_back_color"
								android:src="@drawable/dropdown_arrow"
								android:layout_height="25dp" />
						</LinearLayout>
					
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight=".1"
						android:orientation="vertical"
						android:paddingStart="15dp"
						android:paddingEnd="20dp">
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="12sp"
							
							android:text="@string/vehicle_years"
							android:textAllCaps="true" />
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="center"
							android:onClick='@{(v)->activity.gotoListACtivity("get_years")}'
							
							android:background="@drawable/rect_view_editprofile">
							
							<TextView
								android:layout_width="0dp"
								android:layout_weight=".1"
								android:textSize="12sp"
								android:hint="@string/select_year"
								
								android:textAllCaps="true"
								android:text="@={model.vehicle_year}"
								android:paddingStart="10dp"
								android:layout_height="wrap_content" />
							
							<ImageView
								android:layout_width="25dp"
								android:paddingEnd="10dp"
								android:tint="@color/profile_top_back_color"
								android:src="@drawable/dropdown_arrow"
								android:layout_height="25dp" />
						</LinearLayout>
					</LinearLayout>
					
					
				
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_marginTop="15dp"
					android:layout_height="match_parent">
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight=".1"
						android:orientation="vertical"
						android:paddingStart="20dp">
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="12sp"
							
							android:text="@string/fuel_type"
							android:textAllCaps="true" />
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="35dp"
							android:gravity="center"
							android:onClick='@{(v)->activity.gotoListACtivity("get_fuel_types")}'
							
							android:background="@drawable/rect_view_editprofile">
							
							<TextView
								android:layout_width="0dp"
								android:layout_weight=".1"
								android:textAllCaps="true"
								
								android:hint="@string/select_fuel_type"
								android:text="@={model.fuel_type}"
								android:textSize="12sp"
								android:paddingStart="10dp"
								android:layout_height="wrap_content" />
							
							<ImageView
								android:layout_width="25dp"
								android:paddingEnd="10dp"
								android:tint="@color/profile_top_back_color"
								android:src="@drawable/dropdown_arrow"
								android:layout_height="25dp" />
						</LinearLayout>
					
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight=".1"
						android:orientation="vertical"
						android:paddingStart="15dp"
						android:paddingEnd="20dp">
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="12sp"
							
							android:text="@string/transmission"
							android:textAllCaps="true" />
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="center"
							android:onClick='@{(v)->activity.gotoListACtivity("get_vehicle_transmissions")}'
							android:background="@drawable/rect_view_editprofile">
							
							<TextView
								android:layout_width="0dp"
								android:layout_weight=".1"
								android:textSize="12sp"
								android:textAllCaps="true"
								android:hint="@string/select_transmission"
								
								android:text="@={model.vehicle_transmission_title}"
								android:paddingStart="10dp"
								android:layout_height="wrap_content" />
							
							<ImageView
								android:layout_width="25dp"
								android:paddingEnd="10dp"
								android:tint="@color/profile_top_back_color"
								android:src="@drawable/dropdown_arrow"
								android:layout_height="25dp" />
						</LinearLayout>
					</LinearLayout>
				
				
				
				</LinearLayout>
				
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="20dp"
					android:layout_marginTop="15dp"
					android:text="@string/vehicle_type"
					android:textSize="12sp"
					android:textAllCaps="true" />
				
				<LinearLayout
					android:layout_width="match_parent"
					
					android:layout_height="match_parent">
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight=".1"
						android:orientation="vertical"
						android:paddingStart="20dp">
						
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="35dp"
							android:gravity="center"
							android:onClick='@{(v)->activity.gotoListACtivity("get_vehicle_types")}'
							
							android:background="@drawable/rect_view_editprofile">
							
							<TextView
								android:layout_width="0dp"
								android:layout_weight=".1"
								tool:text="Medium"
								android:hint="@string/select_vehicle_type"
								
								android:text="@={model.vehicle_type_name}"
								android:textSize="12sp"
								android:textAllCaps="true"
								android:paddingStart="10dp"
								android:layout_height="wrap_content" />
							
							<ImageView
								android:layout_width="25dp"
								android:paddingEnd="10dp"
								android:tint="@color/profile_top_back_color"
								android:src="@drawable/dropdown_arrow"
								android:layout_height="25dp" />
						</LinearLayout>
					
					</LinearLayout>
					
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight=".1"
						android:orientation="vertical"
						android:onClick='@{(v)->activity.gotoVehicleSubtypes("get_vehicle_types")}'
						
						android:paddingStart="15dp"
						android:paddingEnd="20dp">
						
						
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="center"
							android:background="@drawable/rect_view_editprofile">
							
							<TextView
								android:layout_width="0dp"
								android:layout_weight=".1"
								tool:text="Sedan"
								android:hint="@string/select_sub_type"
								
								android:text="@={model.vehicle_subtype_name}"
								android:textAllCaps="true"
								android:textSize="12sp"
								android:paddingStart="10dp"
								android:layout_height="wrap_content" />
							
							<ImageView
								android:layout_width="25dp"
								android:paddingEnd="10dp"
								android:tint="@color/profile_top_back_color"
								android:src="@drawable/dropdown_arrow"
								android:layout_height="25dp" />
						</LinearLayout>
					</LinearLayout>
				
				</LinearLayout>
				
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:orientation="vertical"
					android:paddingStart="25dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/vehicle_for"
						android:textAllCaps="true"
						android:textSize="12sp" />
					
					<RadioGroup
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						
						<FrameLayout
							android:onClick="@{()->activity.changeDaywiseCalue(false)}"
							
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
						
						<RadioButton
							android:checked="@{model.dayWise==false}"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:clickable="false"
							android:button="@drawable/custom_btn_radio_registration"
							
							android:padding="7dp"
							android:text="@string/fixed_kilometer"
							android:textColor="#353535"
							
							android:textSize="12sp" />
						</FrameLayout>
						
						<FrameLayout
							android:onClick="@{()->activity.changeDaywiseCalue(true)}"
							
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
						<RadioButton
							android:checked="@{model.dayWise==true}"
							android:clickable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							
							android:button="@drawable/custom_btn_radio_registration"
							android:padding="7dp"
							android:text="@string/day_wise"
							android:textColor="#353535"
							android:textSize="12sp"
							
							/>
						</FrameLayout>
					</RadioGroup>
				
				</LinearLayout>
				
				
				<LinearLayout
					
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="25dp"
					android:layout_marginTop="10dp"
					
					
					android:gravity="center_vertical">
					
					<TextView
						android:layout_width="0dp"
						android:layout_weight=".6"
						
						android:layout_height="wrap_content"
						android:text="@string/charge_for_one_day"
						android:textAllCaps="true"
						android:textColor="#353535"
						android:textSize="11sp" />
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_weight=".4"
						android:gravity="center"
						android:layout_marginEnd="7dp"
						android:layout_height="wrap_content">
						
						<LinearLayout
							android:layout_width="90dp"
							android:layout_height="35dp"
							
							android:layout_marginRight="5dp"
							
							android:background="@drawable/rect_view_editprofile"
							android:gravity="center_vertical"
							android:orientation="horizontal">
							
							<EditText
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight=".1"
								android:background="@null"
								android:gravity="center"
								android:hint="@string/amount"
								android:inputType="number"
								android:maxLength="4"
								
								
								android:text="@={model.vehicle_charges_one_day}"
								android:textColor="#353535"
								android:textColorHint="#71353535"
								android:textSize="13sp"
								
								
								/>
						
						
						</LinearLayout>
						
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/Sar"
							android:textColor="#353535"
							
							
							android:textSize="13sp" />
					
					</LinearLayout>
				
				</LinearLayout>
				
				<LinearLayout
					android:visibility="@{model.dayWise?View.GONE:View.VISIBLE}"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="25dp"
					android:layout_marginTop="10dp"
					
					
					android:gravity="center_vertical">
					
					<TextView
						android:layout_width="0dp"
						android:layout_weight=".6"
						
						android:layout_height="wrap_content"
						android:text="@string/one_day_free_km"
						android:textAllCaps="true"
						android:textColor="#353535"
						android:textSize="11sp" />
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_weight=".4"
						android:gravity="center"
						android:layout_marginEnd="7dp"
						android:layout_height="wrap_content">
						
						<LinearLayout
							android:layout_width="90dp"
							android:layout_height="35dp"
							android:layout_marginRight="5dp"
							
							android:background="@drawable/rect_view_editprofile"
							android:gravity="center_vertical"
							android:orientation="horizontal">

							<EditText
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight=".1"
								android:background="@null"
								android:gravity="center"
								android:hint="@string/km"
								android:inputType="number"
								android:maxLength="4"
								android:text="@={model.one_day_free_kilometer}"

								android:textColor="#353535"
								android:textColorHint="#71353535"
								android:textSize="13sp"


								/>
						
						
						</LinearLayout>


						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"

							android:text="KM"
							android:textColor="#353535"


							android:textSize="13sp" />
					
					</LinearLayout>
				
				</LinearLayout>
				
				<LinearLayout
					android:visibility="@{model.dayWise?View.GONE:View.VISIBLE}"
					
					android:id="@+id/layoutPerkilometer"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="25dp"
					android:layout_marginTop="10dp"
					
					
					android:gravity="center_vertical">
					
					<TextView
						android:layout_width="0dp"
						android:layout_weight=".6"
						
						android:layout_height="wrap_content"
						android:textAllCaps="true"
						android:text="@string/charge_for_one_kilometer"
						android:textColor="#353535"
						android:textSize="11sp" />
					
					<LinearLayout
						android:layout_width="0dp"
						android:layout_weight=".4"
						android:gravity="center"
						android:layout_marginEnd="7dp"
						android:layout_height="wrap_content">
						
						<LinearLayout
							android:layout_width="90dp"
							android:layout_height="35dp"
							android:layout_marginRight="5dp"
							
							android:background="@drawable/rect_view_editprofile"
							android:gravity="center_vertical"
							android:orientation="horizontal">
							
							<EditText
								android:layout_width="0dp"
								android:layout_height="wrap_content"
								android:layout_weight=".1"
								android:background="@null"
								android:gravity="center"
								android:hint="@string/amount"
								android:inputType="number"
								android:maxLength="4"
								android:text="@={model.per_kilometer_charge}"
								
								android:textColor="#353535"
								android:textColorHint="#71353535"
								android:textSize="13sp"
								
								
								/>
						
						
						</LinearLayout>
						
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							
							android:text="@string/Sar"
							android:textColor="#353535"
							
							
							android:textSize="13sp" />
					
					</LinearLayout>
				
				</LinearLayout>
				
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:layout_marginLeft="25dp"
					android:layout_marginTop="15dp"
					android:layout_marginRight="25dp"
					
					android:visibility='@{model.isOwner_Company ? View.GONE:View.VISIBLE}'
					android:background="@drawable/rect_view_editprofile"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight=".1"
						android:ellipsize="marquee"
						android:hint="@string/insurance_policy"
						android:paddingLeft="10dp"
						android:text="@{model.insurance_policy}"
						android:paddingRight="10dp"
						android:singleLine="true"
						android:textColor="#353535"
						android:textColorHint="#71353535"
						
						android:textSize="13sp" />
					
					<pick.com.app.uitility.custom.RoundButton
						android:layout_width="120dp"
						android:layout_height="match_parent"
						android:onClick="@{(v)->activity.getInsurancePolocy(v,model)}"
						
						android:gravity="center"
						
						android:text="@string/upload"
						
						
						android:textSize="10sp"
						
						
						app:rb_background_color="#1DA1F2"
						app:rb_background_color_pressed="#0B5D8E"
						
						app:rb_corner_radius="2dp"
						app:rb_corner_width="1dp"
						app:rb_text_color="@android:color/white"
						app:rb_text_color_pressed="@android:color/white" />
					/>
				
				</LinearLayout>
				<LinearLayout
					android:visibility="@{model.isLisancePreview() ? View.VISIBLE : View.GONE}"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					
					<RelativeLayout
						android:layout_marginStart="25dp"
						android:layout_marginTop="10dp"
						
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<ImageView
							android:id="@+id/insurance_image"
							android:layout_width="80dp"
							android:scaleType="fitXY"
							android:src="@color/ef_white"
							android:layout_marginTop="10dp"
							android:layout_height="80dp" />
						
						<ImageView
							android:onClick="removePreview"
							android:layout_width="wrap_content"
							android:layout_marginStart="65dp"
							android:id="@+id/imageViewPreviewClose"
							android:src="@drawable/com_facebook_close"
							android:layout_height="wrap_content" />
					
					</RelativeLayout>
				</LinearLayout>
				
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="25dp"
						android:layout_marginTop="15dp"
						android:layout_marginRight="25dp"
						android:layout_marginBottom="5dp"
						android:text="@string/Discount"
						android:textAllCaps="true"
						android:textColor="#353535" />
					
					<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/recycleviwe"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>
				
				
				</LinearLayout>
				
				<pick.com.app.uitility.custom.RoundButton
					android:id="@+id/buttonSubmit"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="15dp"
					android:layout_marginBottom="7dp"
					android:gravity="center"
					android:paddingStart="8dp"
					android:paddingEnd="8dp"
					android:text="@string/submit"
					android:onClick="addNewVehicle"
					app:rb_animation_alpha="true"
					
					
					app:rb_animation_duration="500"
					app:rb_background_color="#1DA1F2"
					app:rb_background_color_pressed="#0B5D8E"
					app:rb_corner_radius="3dp"
					app:rb_corner_width="1dp"
					
					app:rb_text_color="@android:color/white"
					app:rb_text_color_pressed="@android:color/white" />
				/>
				
				<TextView
					android:layout_width="match_parent"
					android:gravity="center"
					android:layout_marginBottom="@dimen/_12sdp"
					android:textSize="@dimen/_10sdp"
					android:text="@string/you_need_to_pay_percent"
