<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	
	xmlns:bind="http://schemas.android.com/apk/res-auto">
	
	<data>
		<variable
			name="activity"
			type="pick.com.app.varient.user.ui.activity.EditProfileActivity"/>
		<variable
			name="toolbar"
			type="pick.com.app.base.model.ToolbarCustom"/>
		
		
		<variable
			name="user"
			type="pick.com.app.varient.user.pojo.RegistrationModel" />
	</data>
	
	<LinearLayout
		
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		>
		
		<include layout="@layout/toolbar"
			bind:toolbar="@{toolbar}"/>
		
	
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:orientation="vertical"
				
				android:gravity="center"
				android:layout_margin="10dp"
				android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				
				
				android:text="@string/profile_picture" />
			
			<RelativeLayout
				android:layout_width="95dp"
				android:layout_margin="5dp"
				android:layout_height="wrap_content"
				>
				
				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/profile_image"
					android:layout_width="80dp"
					android:layout_height="80dp"
					app:loadImage='@{user.data.upload_url +"profile_pic/"+ user.data.profile_pic }'
					android:src="@drawable/com_facebook_profile_picture_blank_square"
					app:civ_border_color="#000"
					app:civ_border_width="1dp" />
				
				<ImageView
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_alignParentRight="true"
					android:layout_alignParentBottom="true"
					android:onClick="showPicker"
					android:src="@drawable/change_pic_icon" />
			</RelativeLayout>
			</LinearLayout>
			
			<pick.com.app.uitility.custom.CustomEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="5dp"
				android:layout_marginRight="20dp"
				android:hint="@string/name"
				
				android:inputType="textCapSentences"
				android:padding="8dp"
				android:text="@{user.data.dl_name}"
				
				android:textColor="#353535"
				android:textColorHint="#71353535"
				
				android:textSize="13sp"
				app:libIZO_setBorderColor="#353535"
				
				
				app:libIZO_setBorderView="true"
				app:libIZO_setCornerRadius="3dp"
				app:setValue="@{user}" />
			
			
			<pick.com.app.uitility.custom.CustomEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="15dp"
				android:layout_marginRight="20dp"
				android:hint="@string/enter_email_address"
				android:inputType="textEmailAddress"
				android:padding="8dp"
				android:text="@{user.data.email}"
				
				
				android:textColor="#353535"
				android:textColorHint="#71353535"
				
				android:textSize="13sp"
				app:libIZO_setBorderColor="#353535"
				
				
				app:libIZO_setBorderView="true"
				app:libIZO_setCornerRadius="3dp"
				app:setValue="@{user}" />
			
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:gravity="center_vertical"
				android:background="@drawable/rect_view_editprofile"
				android:layout_marginTop="15dp"
				android:layout_marginRight="20dp">
				
				<TextView
					android:layout_width="wrap_content"
					
					android:text='@{"+"+user.data.country_code+" -"}'
					
					android:paddingEnd="10dp"
					android:paddingStart="10dp"
					
					
					android:textSize="13sp"
					android:textColor="#353535"
					android:textColorHint="#71353535"
					
					android:layout_height="wrap_content" />
				
				<pick.com.app.uitility.custom.CustomEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="13sp"
					android:enabled="false"
					android:hint="@string/enter_mobile_number"
					android:text="@{user.data.contact_number}"
					android:inputType="number"
					app:setValue="@{user}"
					android:padding="8dp"
					
					
					
					
					
					android:textColor="#353535"
					android:textColorHint="#71353535"
					
					
					android:background="@null"
					
					/>
			
			</LinearLayout>
			
			
			<pick.com.app.uitility.custom.RoundButton
				android:id="@+id/buttonSubmit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="15dp"
				android:layout_marginBottom="15dp"
				android:gravity="center"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:text="@string/submit"
				app:rb_animation_alpha="true"
				app:rb_animation_duration="500"
				
				android:onClick="submitOnclick"
				app:rb_background_color="#1DA1F2"
				app:rb_background_color_pressed="#0B5D8E"
				app:rb_corner_radius="3dp"
				app:rb_corner_width="1dp"
				
				app:rb_text_color="@android:color/white"
				app:rb_text_color_pressed="@android:color/white" />
			/>
		
		</LinearLayout>
	
	</androidx.core.widget.NestedScrollView>
	</LinearLayout>
</layout>