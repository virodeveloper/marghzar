<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		
		<variable
			name="user"
			type="pick.com.app.varient.owner.pojo.BookingModel.Data.BeforePickupDetail.AsseriesData"/>
	
	</data>
	
	<LinearLayout
		android:orientation="vertical"
		android:padding="7dp"
		android:paddingStart="@dimen/_10sdp"
		android:gravity="center_vertical"
		android:layout_width="match_parent"
		android:background="#F4F4F4"
		android:layout_height="wrap_content">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_weight=".4"
			android:layout_margin="3dp"
			
			android:layout_height="wrap_content">
			
			<TextView
				android:layout_width="0dp"
				android:layout_weight=".1"
				android:background="@null"
				android:padding="5dp"
				android:textSize="12sp"
				tools:text="Smart Car Charger"
				android:text="@{user.name}"
				android:layout_height="match_parent" />
			
			<CheckBox
				android:layout_width="wrap_content"
				android:checked="@={user.isavail}"
				android:layout_height="wrap_content" />
		
		</LinearLayout>
		
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight=".1"
				android:layout_margin="3dp"
				android:background="@drawable/rect_add_asseries"
				android:layout_height="wrap_content">
				
				<EditText
					android:layout_width="match_parent"
					android:background="@null"
					android:padding="5dp"
					android:inputType="number"
					android:gravity="center"
					android:text="@={user.qty}"
					
					android:textSize="12sp"
					android:layout_height="match_parent" />
			</LinearLayout>
			
			<TextView
				android:layout_width="wrap_content"
				android:text="/"
				android:textSize="20sp"
				android:padding="3dp"
				android:layout_marginTop="-5dp"
				android:layout_height="match_parent" />
			
			<TextView
				android:layout_width="wrap_content"
				android:background="@null"
				android:padding="5dp"
				android:gravity="center_vertical"
				tools:text="260"
				android:text="@{user.value}"
				android:textSize="12sp"
				android:layout_height="match_parent" />
			
			
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight=".3"
				android:paddingEnd="5dp"
				android:gravity="center_vertical"
				android:layout_height="match_parent">
				
				<TextView
					android:layout_width="0dp"
					android:layout_weight=".1"
					android:text="@string/Sar"
					android:paddingStart="7dp"
					android:layout_height="wrap_content" />
				
				
			
			
			</LinearLayout>
		
		</LinearLayout>
	
	
	
	</LinearLayout>
</layout>